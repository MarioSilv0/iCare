{
  "ConnectionStrings": {
    "Deploy": "Server=tcp:icareserver.database.windows.net,1433;Initial Catalog=icareDB;Persist Security Info=False;User ID=IcareAdmin;Password=${DB_PASSWORD};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=60;"
    ,"DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ICareDBContext;Trusted_Connection=True;TrustServerCertificate=true;MultipleActiveResultSets=true;Max Pool Size=10000"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "https://localhost:7266",
    "Audience": "https://127.0.0.1:4200",
    "Key": "${JWT_SECRET}"
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "SenderEmail": "marioextr@gmail.com",
    "SenderPassword": "${EMAIL_PASSWORD}",
    "EnableSsl": true
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:7266"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 100000,
      "MaxConcurrentUpgradedConnections": 100000,
      "MaxRequestBodySize": 104857600,
      "RequestHeadersTimeout": 30000,
      "KeepAliveTimeout": 30000
    }
  }

}
